<Page x:Class="小玩意.AbbRobot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:小玩意"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AbbRobot">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid  >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions  >
            <RowDefinition Height="0.04*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="机器人参数" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,5"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock  Text="机器人数量" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,5" />
        </StackPanel>
        <Grid Grid.Column="1" Grid.Row="1">
            
            <DataGrid   AutoGenerateColumns="False" BorderBrush="{x:Null}" Foreground="Black" 
                        HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Auto" GridLinesVisibility="None"
                        SelectedItem="{Binding SelectedSide, Mode=TwoWay}"
                        Background="White"  FontSize="10" 
                        CanUserAddRows="False" Style="{Binding DataGridColumnHeader}" ItemsSource="{Binding RobotModels}"  >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="机器人ID" Width="0.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Height="90" >
                                    <Label Content="{Binding Id }"  FontFamily="Agency FB" FontSize="20"  Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="机器人名称" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding Name }"  FontFamily="Agency FB" FontSize="20" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="系统版本" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding SystemVersion }"  FontFamily="Agency FB"  FontSize="20" Margin="20,10,0,10"></Label>
                                    <!--<Button Content="连接" FontSize="20" Width="130" Height="30" Tag="{Binding ID}" Command="{Binding  }" Margin="0,2,0,0">
                                    </Button>-->
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="IP地址" Width="1.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding IPAddress }"   FontFamily="Agency FB"  FontSize="20" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="是否为虚拟机"   Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding IsVirtual }"   FontFamily="Agency FB" FontSize="20" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>
            
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <DataGrid   AutoGenerateColumns="False" BorderBrush="{x:Null}" Foreground="Black" 
             HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden"
             VerticalScrollBarVisibility="Auto" GridLinesVisibility="None"
             SelectedItem="{Binding SelectedSide, Mode=TwoWay}"
             Background="White"  FontSize="10" 
             CanUserAddRows="False" Style="{Binding DataGridColumnHeader}" ItemsSource="{Binding RobotModels}"  >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="数据名称" Width="0.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Height="90" >
                                    <Label Content="{Binding AddressValue }" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="模块名称" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding Port }" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="机器人名称" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding Port }" Margin="20,10,0,10"></Label>
                                    <!--<Button Content="连接" FontSize="20" Width="130" Height="30" Tag="{Binding ID}" Command="{Binding  }" Margin="0,2,0,0">
                         </Button>-->
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="目标数据类型" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding Port }" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="当前值" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label Content="{Binding Port }" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="操作" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button x:Name="ss" Content="写入" Command="{Binding AbbSetValue}"  FontSize="20"  Width="130" Height="30" Style="{StaticResource ModernButtonStyle1}" CommandParameter="ABB">
                                        
                                    </Button>
                                    <!--<Label Content="{Binding Port }" Margin="20,10,0,10"></Label>-->
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </Grid>

    
</Page>
