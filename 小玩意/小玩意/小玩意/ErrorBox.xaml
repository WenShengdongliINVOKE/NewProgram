<Window x:Class="小玩意.ErrorBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:小玩意"
        mc:Ignorable="d"
         xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        Title="ErrorBox" Height="300" Width="450" Topmost="True" ResizeMode="NoResize">
    <Window.Resources>
       
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="8" 
                     ShadowDepth="2"
                     Opacity="0.3"/>
        </Grid.Effect>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5*" />

            </Grid.ColumnDefinitions>
            <Image x:Name="GifImage" gif:ImageBehavior.RepeatBehavior="100x"    gif:ImageBehavior.AnimatedSource="{Binding Path1}"  />
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 图标区域 -->
            <Image x:Name="GifImage1" gif:ImageBehavior.RepeatBehavior="100x" Width="100" Margin="00" gif:ImageBehavior.AnimatedSource="{Binding Path2}"  />
            <!--<Image x:Name="StatusIcon" 
               Width="24" Height="24" Margin="5,3"
               Source="C:\Users\Think book\Pictures\Saved Pictures\捕获 (2).PNG"
               RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Image.RenderTransform>
            </Image>-->

            <!-- 文本区域 -->
            <TextBlock x:Name="MessageText" Grid.Column="1"
                   VerticalAlignment="Center" Margin="10,1,1,1"
                    Style="{Binding AnimatedTextBlockStyle}"
                   FontSize="14"
                  Foreground ="{Binding Color}"   Text="{Binding ErrorText}"  TextWrapping="Wrap"/>
        </Grid>
        <!--<StackPanel Grid.Row="0">
            --><!--<Image   Margin="10,10,1000 10" Width="70" Height="40">--><!--
            <Image Width="430" Height="30" Margin="10,1,400 10" Source="{Binding Path}" >
                --><!--<Image.Source>
                    <BitmapImage DecodePixelWidth="100"  
     UriSource="C:\Users\Think book\Pictures\Saved Pictures\捕获 (2).PNG" />
                </Image.Source>--><!--
            </Image>
            <TextBlock Style="{StaticResource AnimatedTextBlockStyle}"/>
        </StackPanel>-->
        <StackPanel Grid.Row="1">

            <!--<TextBlock  Margin="30,0,0,0"  FontSize="15"  Foreground ="{Binding Color}"   Text="{Binding ErrorText}"  TextWrapping="Wrap" />-->
            <!--<TextBlock  Margin="30,0,0,0"  FontSize="15"  Foreground ="{Binding Color}" Text="{Binding ErrorText}"   ScrollViewer.HorizontalScrollBarVisibility="Auto" />-->
            
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button  x:Name="Yes" Content="确认" Width="100" Height="30"  Click="Yes_Click" FontSize="15" Margin="0,10,300,0" Style="{StaticResource ModernButtonStyle1}" >
              
            </Button>
            <Button  x:Name="No" Content="取消" Width="100" Height="30"  FontSize="15" Click="No_Click" Margin="0,-30,-300,0" Style="{StaticResource ModernButtonStyle1}" >
               
            </Button>

        </StackPanel>
    </Grid>
</Window>
