<Page x:Class="小玩意.Weather"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:小玩意"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Weather">

    <Grid x:Name="MainGrid">
        <!-- 背景层（用于动态天气） -->
        <Canvas x:Name="WeatherEffectCanvas" IsHitTestVisible="False" />

        <!-- 主内容层 -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- 天气信息显示 -->
            <Border Grid.Row="1"
                    Background="#2C3E50"
                    Opacity="0.9"
                    CornerRadius="15"
                    Padding="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Viewbox Width="100" Height="100">
                        <TextBlock x:Name="txtIcon" 
                                   Text="☀️" 
                                   FontSize="80"
                                   HorizontalAlignment="Center"/>
                    </Viewbox>

                    <StackPanel Grid.Column="1" Margin="30,0,0,0" >
                        <TextBlock x:Name="txtCityName" 
                                   FontSize="28" FontWeight="SemiBold" Foreground="White">
                            <Run Text="{Binding City}"/>, <Run Text="{Binding Country}"/>
                        </TextBlock>

                        <TextBlock x:Name="txtTemp" 
                                   FontSize="50" FontWeight="Bold" Foreground="#FFD700">
                            <Run Text="{Binding Temperature}"/>℃
                        </TextBlock>

                        <TextBlock x:Name="txtDesc" 
                                   FontSize="20" Foreground="#BDC3C7">
                            <Run Text="{Binding Description}"/>
                        </TextBlock>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="湿度：" FontSize="16" Foreground="#95A5A6"/>
                            <TextBlock Text="{Binding Humidity}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="%" FontSize="16" Foreground="#95A5A6" Margin="0,0,20,0"/>

                            <TextBlock Text="风速：" FontSize="16" Foreground="#95A5A6"/>
                            <TextBlock Text="{Binding WindSpeed}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text=" m/s" FontSize="16" Foreground="#95A5A6"/>
                        </StackPanel>

                        <TextBlock x:Name="txtTime" 
                                   FontSize="14" Foreground="#7F8C8D" Margin="0,15,0,0"
                                   Text="{Binding DateTime}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
