<Window x:Class="小玩意.TCP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:小玩意"
        mc:Ignorable="d"
        Title="TCP" Height="1080" Width="1920">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
   
            
            <DataGrid Grid.Column="1"  x:Name="DataGridText"  Style="{Binding DataGridColumnHeader}" Height="Auto"    Margin="10,3,3,15" AlternationCount="2" 
            AutoGenerateColumns="False" BorderBrush="{x:Null}" Foreground="Red" 
            HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Auto" GridLinesVisibility="None"
            CanUserAddRows="False" ItemsSource="{Binding MyData}" 
            SelectedItem="{Binding SelectedSide}"
            Background="White"  FontSize="18"
            Grid.ColumnSpan="2" SelectionUnit="Cell" >
                <DataGrid.Columns>

                    <DataGridTemplateColumn  Header="地址" Width="1*"  >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Height="100" >
                                <Label  Content="{Binding AddressValue }"  Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn  Header="端口号" Width="1*" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Label  Content="{Binding Port }" Margin="20,10,0,10"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="操作" Width="1*"  >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                <Button Content="连接" FontSize="20" Style="{StaticResource ModernButtonStyle1}" Width=" 130" Height="30"  Tag="{Binding ID}" Command="{Binding  }" Margin="0,2,0,0">

                                </Button>
                            </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Column="0">
            <Label Content="已读取的数据"  />
            <RichTextBox  x:Name="ReadData" >
                    <FlowDocument>
                        <Paragraph>
                            This is flow content and you can
                            <Bold>edit me!</Bold>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </StackPanel>
      
        
    </Grid>
</Window>
